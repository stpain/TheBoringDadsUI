            <Layer level="ARTWORK">
                <Line thickness="1">
                    <Color r="0.75" g="0.75" b="0.75" a="0.85"/>
                    <StartAnchor point="TOPLEFT" x="2" y="-2"/>
                    <EndAnchor point="BOTTOMLEFT" x="2" y="2"/>
                </Line>
                <Line thickness="1">
                    <Color r="0.75" g="0.75" b="0.75" a="0.85"/>
                    <StartAnchor point="TOPLEFT" x="2" y="-2"/>
                    <EndAnchor point="TOPRIGHT" x="-2" y="-2"/>
                </Line>
                <Line thickness="1">
                    <Color r="0.75" g="0.75" b="0.75" a="0.85"/>
                    <StartAnchor point="BOTTOMLEFT" x="2" y="2"/>
                    <EndAnchor point="BOTTOMRIGHT" x="-2" y="2"/>
                </Line>
                <Line thickness="1">
                    <Color r="0.75" g="0.75" b="0.75" a="0.85"/>
                    <StartAnchor point="TOPRIGHT" x="-2" y="-2"/>
                    <EndAnchor point="BOTTOMRIGHT" x="-2" y="2"/>
                </Line>
                <Texture parentKey="icon">
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="label" inherits="GameFontNormal">
                    <Color r="1" g="1" b="1"/>
                    <Size y="20"/>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="0" y="9"/>
                        <Anchor point="BOTTOMRIGHT" x="0" y="9"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

